


<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Modelo</th>
      <th>Marca</th>
      <th>Ano</th>
      <th>Placa</th>
      <th>Cor</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
    <tr>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.plate %></td>
        <td><%= vehicle.color %></td>
        <td>
            <%= link_to "Ver", vehicle, class: "btn btn-primary btn-sm" %>
            <%= link_to "Editar", edit_vehicle_path(vehicle), class: "btn btn-warning btn-sm" %>
            <%= link_to "Excluir", vehicle, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger btn-sm" %>
        </td>
    </tr>
    <%end%>
  </tbody>